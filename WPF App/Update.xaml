<Window x:Class="WPF_App.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App"
        mc:Ignorable="d"
        Title="Update" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,200,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Center" Margin="0,250,0,0" TextWrapping="Wrap" Text="{Binding Artist}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Save Changes" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Click="btn_Save"/>
    </Grid>
</Window>
